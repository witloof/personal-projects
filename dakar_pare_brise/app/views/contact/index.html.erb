<div class="container bg-white">
  <h2 class="heading">Nous écrire</h2>
  <%= form_tag('/contact/new', mehtod: :post) do %>
    <div class="form-group">
      <%= text_field_tag("contact[nom]", "", placeholder:"Prénom & Nom", class:"form-control") %>
    </div>
    <div class="form-group">
      <%= text_field_tag("contact[email]","", placeholder:"Votre E-mail", class:"form-control") %>
    </div>
    <div class="form-group">
      <%= text_area_tag("contact[message]","", placeholder:"Message", class:"form-control") %>
    </div>
    <div class="form-group">
       <%= submit_tag("Envoyer",class:"btn btn-primary") %>
    </div>
  <% end %>
  <a href="<%= new_appointment_url%>">Prenez rendez-vous</a>
</div>
