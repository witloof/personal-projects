          </div>
         </div>
    <% end %>
      <div class="col-md-6">
        <div class="form-group">
          <%= form.label "Pays", for: :country_iso_code %>
          <%= form.select(:country_iso_code, countries_options, { :prompt => 'Choisir' }, { class:"form-control" })%>
        </div>
      </div>
  </div>
  <div class="row">
    <div class="col-md-2 mt-4">
      <%= form.submit "Enregistrer", class: "btn btn-rounded btn-primary" %>
    </div>
  </div>
<% end %>
