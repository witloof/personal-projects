      <h2><%= pluralize(admin_counter_agent.errors.count, "error") %> prohibited this admin_counter_agent from being saved:</h2>

      <ul>
        <% admin_counter_agent.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= form.label "Matricule", for: :number %>
        <%= form.text_field :number, class: "form-control" %>
      </div>
    </div>
    <%= form.fields_for :user do |u| %>
    <div class="col-md-6">
        <div class="form-group">
          <%= u.label "Photo", for: :avatar %>
          <%= u.file_field :avatar, class: "form-control" %>
        </div>
      </div>
      <div class="col-md-6">
        <div class="form-group">
          <%= u.label "Prénom", for: :first_name %>
          <%= u.text_field :first_name, class: "form-control" %>
        </div>
      </div>
      <div class="col-md-6">
        <div class="form-group">
          <%= u.label "Nom", for: :last_name %>
          <%= u.text_field :last_name, class: "form-control" %>
        </div>
      </div>
      <div class="col-md-6">
        <div class="form-group">
          <%= u.label "Email", for: :email %>
          <%= u.text_field :email, class: "form-control" %>
        </div>
      </div>
      <div class="col-md-6">
        <div class="form-group">
          <%= u.label "Téléphone", for: :phone_number %>
          <%= u.text_field :phone_number, class: "form-control" %>
        </div>
      </div>
      <div class="col-md-6">
        <div class="form-group">
          <%= u.label "Aeroport", for: :airport_id %>
