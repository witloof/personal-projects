<div class="container">
  <% if @user.errors.any? %>
    <div class="alert alert-danger">
      <ul>
        <% @user.errors.full_messages.each do |error| %>
          <li><%= error %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="card mt-4">
    <h5 class="card-header">Mes informations personnelles</h5>
    <div class="card-body">
      <%= form_for(@user, url: admin_update_user_path, method: :post) do |form| %>
       <div class="row form-group">
          <%= form.label "Photo", for: :avatar, class:"col-md-4 text-right" %>
          <div class="col-md-4">
             <%= form.file_field :avatar, class: "form-control" %>
          </div>
        </div>
        <div class="row form-group">
          <%= form.label "Prénom", for: :first_name, class:"col-md-4 text-right" %>
          <div class="col-md-4">
             <%= form.text_field :first_name, class: "form-control" %>
          </div>
        </div>
        <div class="row form-group">
          <%= form.label "Nom", for: :last_name, class:"col-md-4 text-right" %>
          <div class="col-md-4">
             <%= form.text_field :last_name, class: "form-control" %>
          </div>
        </div>
        <div class="row form-group">
          <%= form.label "E-mail", for: :email, class:"col-md-4 text-right" %>
          <div class="col-md-4">
             <%= form.text_field :email, class: "form-control" %>
          </div>
        </div>
        <div class="row form-group">
          <%= form.label "Numéro de téléphone", for: :phone_number, class:"col-md-4 text-right" %>
          <div class="col-md-4">
             <%= form.text_field :phone_number, class: "form-control" %>
          </div>
        </div>
        <div class="row form-group">
          <div class="col-md-12 text-center">
            <%= form.submit "Enregistrer", class:"btn btn-success"%>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <div class="card mt-4">
    <h5 class="card-header">Changer mon mot de passe</h5>
    <div class="card-body">
      <%= form_for(@user, url: admin_change_password_path, method: :post) do |form| %>
      <div class="row form-group">
          <%= form.label "Nouveau mot de actuel", for: :current_password, class:"col-md-4 text-right" %>
          <div class="col-md-4">
            <%= form.password_field :current_password, class: "form-control" %>
          </div>
        </div>
        <div class="row form-group">
          <%= form.label "Nouveau mot de passe", for: :password, class:"col-md-4 text-right" %>
          <div class="col-md-4">
            <%= form.password_field :password, class: "form-control" %>
          </div>
        </div>
        <div class="row form-group">
          <%= form.label "Confirmer le nouveau mot de passe", for: :password_confirmation, class:"col-md-4 text-right" %>
          <div class="col-md-4">
            <%= form.password_field :password_confirmation, class: "form-control" %>
          </div>
        </div>
        <div class="row form-group">
          <div class="col-md-12 text-center">
            <%= form.submit "Enregistrer", class:"btn btn-success"%>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>