<div class="container">
  <div class="d-flex flex-row justify-content-between mb-4">
    <h4>Hôtesses</h4>
    <%= link_to new_admin_commercial_path do %>
      Nouvel hôtesse
    <% end %>
  </div>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Prénom</th>
      <th>Nom</th>
      <th>E-mail</th>
      <th>Téléphone</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @admin_commercials.each do |admin_commercial| %>
      <tr>
        <td><%= admin_commercial.user.first_name %></td>
        <td><%= admin_commercial.user.last_name %></td>
        <td><%= admin_commercial.user.email %></td>
        <td><%= admin_commercial.user.phone_number %></td>
        <td><%= link_to 'Voir', [:admin, admin_commercial] %></td>
        <td><%= link_to 'Modifier', edit_admin_commercial_path(admin_commercial) %></td>
        <td><%= link_to 'Supprimer', [:admin, admin_commercial], method: :delete, data: { confirm: 'Etes vous sur?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @admin_commercials %>
</div>