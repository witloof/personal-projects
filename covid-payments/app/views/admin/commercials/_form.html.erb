<%= form_with(model: [:admin, admin_commercial], local: true) do |form| %>
  <% if admin_commercial.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(admin_commercial.errors.count, "error") %> prohibited this admin_commercial from being saved:</h2>

      <ul>
        <% admin_commercial.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= form.label "Matricule", for: :number %>
        <%= form.text_field :number, class:"form-control"  %>
      </div>
    </div>
    <%= form.fields_for :user do |u| %>
      <div class="col-md-6">
        <div class="form-group">
          <%= u.label "Photo", for: :avatar %>
          <%= u.file_field :avatar, class: "form-control" %>
        </div>
      </div>
      <div class="col-md-6">
        <div class="form-group">
          <%= u.label "Prénom", for: :first_name %>
          <%= u.text_field :first_name, class:"form-control" %>
        </div>
      </div>
      <div class="col-md-6">
        <div class="form-group">
          <%= u.label "Nom", for: :last_name %>
          <%= u.text_field :last_name, class:"form-control"  %>
        </div>
      </div>
      <div class="col-md-6">
        <div class="form-group">
          <%= u.label "Email", for: :email %>
          <%= u.text_field :email, class:"form-control"  %>
        </div>
      </div>
      <div class="col-md-6">
        <div class="form-group">
          <%= u.label "Téléphone", for: :phone_number %>
          <%= u.text_field :phone_number, class:"form-control"  %>
        </div>
      </div>
       <div class="col-md-6">
        <div class="form-group">
          <%= u.label "Aeroport", for: :airport_id %>
          <%= u.select(:airport_id, airports_options, { :prompt => 'Choisir' }, { class:"form-control" })%>
        </div>
      </div>
    <% end %>
  </div>
  <div class="row">
    <div class="col-md-2 mt-4">
      <%= form.submit "Enregistrer", class: "btn btn-rounded btn-primary" %>
    </div>
  </div>
<% end %>
