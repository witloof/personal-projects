<div class="container pt-4 register_form">
  <div class="row mt-4 mb-4">
    <div class="offset-md-3 col-md-5 col-sm-12 pt-4">
      <h2 class="text-gray">Connexion</h2>
     <% if flash.alert %>
      <div class="alert alert-warning" role="alert">
        <%= flash.alert %>
      </div>
      <% end %>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group">
          <%= f.label "E-mail", for: :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
        </div>

        <div class="form-group">
          <%= f.label "Mot de passe", for: :password %><br />
          <%= f.password_field :password, autocomplete: "current-password", class:"form-control" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="form-group">
            <%= f.check_box :remember_me %>
            <%= f.label "Se souvenir de moi",for: :remember_me %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "Connexion", class: "btn btn-primary mt-3"%>
        </div>
      <% end %>
  </div>
</div>

</div>